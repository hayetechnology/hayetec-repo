package assignment4;

public class Vehicle
{
  public String name;
  private int cylinders;
  private Person owner;
 
  public Vehicle(String name, int cylinders, Person owner)
  {
    this.name = name;
    this.cylinders = cylinders;
    this.owner = owner;
  }
  
  public Vehicle()
  {
	  this.name = "unknown";
	  this.cylinders = 0;
	  this.owner = nobody;
  }

  
  public Vehicle(Vehicle originalVehicle)
  {
    name = originalVehicle.name;
    cylinders = originalVehicle.cylinders;
    owner = originalVehicle.owner;
  }
  
  public boolean isEqualVhe(Vehicle otherVehicle)
  {
    if(otherVehicle == null)
    	return false;
    else
    	return(owner);
  }
  
  public String getName()
  {
    return name;
  }

  public int getCylinders()
  {
    return cylinders;
  }
}
